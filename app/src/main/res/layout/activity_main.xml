<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyChooseGoal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#0583EA"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_baseline_arrow_back_24"
                android:drawablePadding="50dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="What topic do you love?"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1">

                <TextView
                    style="@style/tvPadding"
                    android:background="@color/light_blue"
                    android:text="Sports" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/textView"
                    android:text="Podcast"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:text="News"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:text="Business"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:text="Entertainment"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:background="@color/light_blue"
                    android:text="Sports" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:background="@color/light_blue"
                    android:text="Technology" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:text="Pronunciation"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:text="Grammer"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardView.">

                <TextView
                    style="@style/tvPadding"
                    android:text="Health"
                    android:textColor="#0583EA" />

                <View
                    style="@style/view"
                    android:background="@color/light_blue" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0583EA"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Continue"
                android:textColor="#0583EA"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>